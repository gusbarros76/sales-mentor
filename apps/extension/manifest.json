{
  "manifest_version": 3,
  "name": "Sales Mentor - Meet Coach",
  "version": "1.5.0",
  "description": "Real-time AI sales coaching for Google Meet using Closed Captions",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "https://meet.google.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["src/content/content-script.ts"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "public/popup.html"
  }
}
