{
  "name": "sales-mentor",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "validate": "pnpm lint",
    "dev:api": "pnpm --filter realtime-api dev",
    "db:up": "docker compose -f infra/docker-compose.dev.yml up -d",
    "db:down": "docker compose -f infra/docker-compose.dev.yml down",
    "db:migrate": "pnpm --filter realtime-api db:migrate",
    "db:rollback": "pnpm --filter realtime-api db:rollback",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@types/node": "^25.0.3"
  },
  "dependencies": {
    "ws": "^8.18.3"
  }
}
